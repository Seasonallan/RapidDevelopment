<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
              android:orientation="vertical"
    tools:context="com.season.example.ui.fragment.HotFragment">

        <com.season.lib.ui.view.ReboundScrollView
            android:id="@+id/sv_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@color/red"
            android:fillViewport="true"
            android:text="RxJava"
            android:textAllCaps="false"
            tools:ignore="HardcodedText">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grayHit"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@color/white"
                    android:gravity="center"
                    android:padding="124dp"
                    android:text="pull up"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="3dp"
                    android:background="@color/black"
                    android:gravity="center"
                    android:padding="24dp"
                    android:text="pull up"
                    android:textColor="@color/white" />

            </LinearLayout>

        </com.season.lib.ui.view.ReboundScrollView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:background="@color/blue"
            android:padding="24dp"
            android:text="center"
            android:textColor="@color/white" />

        <com.season.lib.ui.view.ReboundScrollView
            android:id="@+id/sv_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btn_set"

            android:background="@color/gray">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grayHit"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:background="@color/white"
                    android:padding="124dp"
                    android:text="pull up"
                    android:textColor="@color/blue" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="300dp"
                    android:background="@color/orange"
                    android:gravity="center"
                    android:padding="124dp"
                    android:text="pull up"
                    android:textColor="@color/white" />

            </LinearLayout>

        </com.season.lib.ui.view.ReboundScrollView>

</LinearLayout>
